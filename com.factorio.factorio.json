{
  "app-id": "com.factorio.factorio",
  "version": "0.14.22",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "1.4",
  "sdk": "org.freedesktop.Sdk",
  "command": "factorio",
  "rename-desktop-file": "factorio.desktop",
  "rename-icon": "factorio",
  "finish-args": [
      /* X11 access */
      "--socket=x11", "--share=ipc",
      /* OpenGL access */
      "--device=dri",
      /* PulseAudio access */
      "--socket=pulseaudio",
      /* Network access */
      "--share=network",
      /* Wayland access */
      "--socket=wayland",
      /* Persist saves and config files */
      "--persist=~/.factorio"
  ],

  "modules": [

	  {
          "name": "factorio",
          "buildsystem": "simple",
	  "build-commands": [
	    "mkdir -p /app/factorio/",
	    "mkdir -p /app/share/icons/hicolor/64x64/apps/",
	    "install data/core/graphics/factorio-icon.png /app/share/icons/hicolor/64x64/apps/factorio.png",
	    "mkdir -p /app/share/applications/",
	    "install factorio.desktop /app/share/applications/factorio.desktop",
	    "mv * /app/factorio/",
	    "mkdir -p /app/bin",
	    "ln -s /app/factorio/bin/x*/factorio /app/bin/factorio"
	  ],
          "sources" : [
              {
                  "type": "archive",
                  "path": "factorio-0.14.22.tar.gz"
              },
              {
                  "type": "patch",
                  "path": "patches/use-system-dirs.patch"
              },
              {
                  "type": "file",
                  "path": "factorio.desktop"
              },
              {
                  "type": "file",
                  "path": "com.factorio.factorio.appdata.xml"
              }
          ]
      }
  ]
}
